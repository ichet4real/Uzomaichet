const express = require('express');
const app = express();

// Here, we define a GET route for the message: My first endpoint
app.get('/', (req, res) => {
  res.json({ message: 'My first endpoint'});
}
);

// Here, we will start the server and make it listen on port 3000
app.listen(3000, () => {
    console.log('Server is running at http://localhost:3000');
}
);
